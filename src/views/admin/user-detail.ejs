<%- include('../partials/layout', { body: `
    <div class="page-header">
        <div>
            <a href="/admin/users" class="text-muted" style="text-decoration: none;">‚Üê Back to Users</a>
            <h1 style="margin-top: 10px;">üë§ ${user.name || user.email}</h1>
        </div>
        <div class="flex gap-2">
            <a href="/api/admin/users/${user.id}/export" class="btn btn-outline btn-sm" target="_blank">üì• Export Data</a>
        </div>
    </div>
    
    <div class="grid-2">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">User Information</h3>
            </div>
            <table class="table">
                <tr>
                    <td><strong>Email</strong></td>
                    <td>${user.email}</td>
                </tr>
                <tr>
                    <td><strong>Name</strong></td>
                    <td>${user.name || 'Not set'}</td>
                </tr>
                <tr>
                    <td><strong>Role</strong></td>
                    <td>
                        <span class="badge ${user.role === 'admin' ? 'badge-accent' : user.role === 'premium' ? 'badge-primary' : 'badge-success'}">
                            ${user.role}
                        </span>
                    </td>
                </tr>
                <tr>
                    <td><strong>Status</strong></td>
                    <td>
                        <span class="badge ${user.isActive ? 'badge-success' : 'badge-danger'}">
                            ${user.isActive ? 'Active' : 'Inactive'}
                        </span>
                    </td>
                </tr>
                <tr>
                    <td><strong>Premium</strong></td>
                    <td>${user.isPremium ? '<span class="badge badge-accent">Premium</span>' : 'No'}</td>
                </tr>
                <tr>
                    <td><strong>Joined</strong></td>
                    <td>${new Date(user.createdAt).toLocaleString()}</td>
                </tr>
                <tr>
                    <td><strong>Last Login</strong></td>
                    <td>${user.lastLoginAt ? new Date(user.lastLoginAt).toLocaleString() : 'Never'}</td>
                </tr>
            </table>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Edit User</h3>
            </div>
            <form method="POST" action="/admin/users/${user.id}">
                <div class="form-group">
                    <label for="role">Role</label>
                    <select name="role" id="role" class="form-control">
                        <option value="user" ${user.role === 'user' ? 'selected' : ''}>User</option>
                        <option value="premium" ${user.role === 'premium' ? 'selected' : ''}>Premium</option>
                        <option value="admin" ${user.role === 'admin' ? 'selected' : ''}>Admin</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>
                        <input type="checkbox" name="isActive" ${user.isActive ? 'checked' : ''}>
                        Account Active
                    </label>
                </div>
                
                <div class="form-group">
                    <label>
                        <input type="checkbox" name="isPremium" ${user.isPremium ? 'checked' : ''}>
                        Premium Subscription
                    </label>
                </div>
                
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
            
            <hr style="margin: 20px 0; border: 0; border-top: 1px solid #eee;">
            
            <form method="POST" action="/admin/users/${user.id}/delete" onsubmit="return confirm('Are you sure you want to delete this user? This cannot be undone.');">
                <button type="submit" class="btn btn-danger">üóëÔ∏è Delete User</button>
            </form>
        </div>
    </div>
    
    <div class="stats-grid">
        <div class="stat-card primary">
            <div class="label">Net Worth</div>
            <div class="value">$${netWorth.toLocaleString()}</div>
        </div>
        <div class="stat-card">
            <div class="label">Accounts</div>
            <div class="value">${user.accounts ? user.accounts.length : 0}</div>
        </div>
        <div class="stat-card accent">
            <div class="label">Mood Check-ins</div>
            <div class="value">${user.moods ? user.moods.length : 0}</div>
        </div>
    </div>
    
    <div class="grid-2">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Accounts</h3>
            </div>
            ${user.accounts && user.accounts.length > 0 ? `
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${user.accounts.map(acc => `
                            <tr>
                                <td>${acc.name}</td>
                                <td><span class="badge badge-primary">${acc.type}</span></td>
                                <td style="color: ${acc.balance >= 0 ? '#48BB78' : '#F56565'}">
                                    $${parseFloat(acc.balance).toLocaleString()}
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            ` : '<p class="text-muted">No accounts</p>'}
        </div>
        
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Recent Moods</h3>
            </div>
            ${user.moods && user.moods.length > 0 ? `
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Score</th>
                            <th>Tags</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${user.moods.slice(0, 5).map(mood => `
                            <tr>
                                <td>${new Date(mood.checkinDate).toLocaleDateString()}</td>
                                <td><strong>${mood.value}/10</strong></td>
                                <td>${(mood.tags || []).join(', ') || '-'}</td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            ` : '<p class="text-muted">No mood entries</p>'}
        </div>
    </div>
` }) %>
